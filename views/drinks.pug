extends layout


block content
  main.drinks--background 
    .drinks-wrapper
      .table-container
        table.table
          caption.subtitle.table-title Csapolt Sörök
          thead.table-header
            td Megnevezés
            td Pohár 
            td Korsó 
          each drink in brewedBeers
            if drink.onTap === true
              tr.table-items 
                td= drink.name
                td #{drink.smallPrice} Ft
                td #{drink.largePrice} Ft
      .table-container     
        table.table
          caption.subtitle.table-title Üveges Sörök
          thead.table-header
            td Megnevezés
            td Ár 
          each drink in bottledBeers
            tr.table-items 
              td= drink.name
              td #{drink.smallPrice} Ft
      .table-container  
        table.table
          caption.subtitle.table-title Rövid Italok
          thead.table-header
            td Megnevezés
            td 2 cl 
            td 4 cl
          each drink in shots
            tr.table-items 
              td= drink.name
              td #{drink.smallPrice} Ft
              td #{drink.largePrice} Ft
      .table-container   
        table.table
          caption.subtitle.table-title Üditők
          thead.table-header
            td Megnevezés
            td Ár 
          each drink in softDrinks
            tr.table-items 
              td= drink.name
              td #{drink.smallPrice} Ft       